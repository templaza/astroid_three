   <version>1.0.0</version>
   <description>TPL_ASTROID_XML_DESCRIPTION</description>
   <inheritable>1</inheritable>
   <scriptfile>script.php</scriptfile>
    <updateservers>
        <server type="extension" name="Astroid Three" priority="1">https://raw.githubusercontent.com/templaza/updateservers/refs/heads/main/templates/astroid_three.xml</server>
    </updateservers>
   <files>
      <folder>html</folder>
      <folder>language</folder>
      <filename>index.php</filename>
      <filename>helper.php</filename>
      <filename>templateDetails.xml</filename>
      <filename>component.php</filename>
      <filename>error.php</filename>
      <filename>offline.php</filename>
      <filename>script.php</filename>
   </files>
   <media destination="templates/site/astroid_three" folder="media">
      <folder>astroid</folder>
      <folder>js</folder>
      <folder>css</folder>
      <folder>scss</folder>
      <folder>images</folder>
   </media>
   <positions>
      <position>astroid-header</position>
      <position>astroid-header-menu</position>
      <position>astroid-header-mobilemenu</position>
      <position>top-a</position>
      <position>top-b</position>
      <position>hero</position>
      <position>main-top</position>
      <position>main-bottom</position>
      <position>breadcrumbs</position>
      <position>sidebar-left</position>
      <position>sidebar-right</position>
      <position>banner</position>
      <position>bottom</position>
      <position>bottom-a</position>
      <position>bottom-b</position>
      <position>footer</position>
      <position>footer-1</position>
      <position>footer-2</position>
      <position>footer-3</position>
      <position>footer-4</position>
      <position>offcanvas</position>
      <position>position-1</position>
      <position>position-2</position>
      <position>position-3</position>
      <position>position-4</position>
      <position>debug</position>
      <position>error-403</position>
      <position>error-404</position>
   </positions>
   <languages folder="language/en-GB">
      <language tag="en-GB">en-GB.tpl_astroid_three.ini</language>
      <language tag="en-GB">en-GB.tpl_astroid_three.sys.ini</language>
   </languages>
   <config>
      <fields name="params">
         <fieldset name="basic" addfieldpath="/libraries/astroid/framework/fields">
            <field name="astroid" type="astroidmanagerlink"></field>
         </fieldset>
      </fields>
   </config>
</extension>